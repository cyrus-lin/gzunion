<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gzunion.app.com.ifanr.tangzhi.TestActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/wxScan"
        android:text="打开微信扫一扫"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/scan"
        android:text="扫一扫"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/diskInstall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫描 sdcard 根目录并安装小程序"
        />

    <Spinner
        android:id="@+id/installedApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/refreshInstalledApps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="刷新已安装的小程序"
            />
        <Button
            android:id="@+id/openApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="打开小程序"
            />
    </LinearLayout>

    <Button
        android:id="@+id/loginByWx"
        android:text="微信登陆"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>